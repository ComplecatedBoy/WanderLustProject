<%- layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3 >Create A New Listing</h3>
      <form action="/listings" method="post" enctype="multipart/form-data" novalidate class="needs-validation">
        <div class="mb-2">
          <label for="listing_title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            id="listing_title"
            placeholder="Enter a Catchy Title"
            class="form-control"
            required
          />
          <div class="valid-feedback">
            Title looks Good!
          </div>
        </div>
        <div class="mb-2">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            id="description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please Enter a Short Description</div>
        </div>
        <!-- <div class="mb-2">
          <label for="imge-url" class="form-label">URL</label>
          <input
            type="text"
            class="form-control"
            name="listing[image.url]"
            id=""
            placeholder="Enter Url of Image"
          />
        </div> -->
        <div class="mb-2">
          <label for="image"class="form-label">Image:</label>
          <input type="file" name="listing[image]" id="" class="form-control" required>
        </div>
        <div class="row">
          <div class="mb-2 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              id="price"
              placeholder="1200"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be Valid</div>
          </div>
          <div class="mb-2 col-md-8">
            <label for="countryName" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            id="countryName"
            placeholder="India"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country name should be Valid</div>
          </div>
        </div>

        <div class="mb-2">
          <label for="lacation" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              id="location"
              placeholder="Bhopal,MadhyaPradesh"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Location should be Valid</div>
        </div>
        <div class="mb-2 mt-3">
          <button type="submit" class="btn add-button">Add</button>
        </div>
      </form>
    </div>
  </div>
</body>
